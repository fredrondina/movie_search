<!DOCTYPE html>
<html>
  <head>
    <title>MovieSearch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="flash-message">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg.html_safe, class: name %>
        <% end %>
    </div>
    
    <%= yield %>
  </body>
</html>
